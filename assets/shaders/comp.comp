#version 450

layout (local_size_x = 16, local_size_y = 16) in;
layout(rgba32f, binding = 1) uniform image2D image;

void main() {	
    const vec2 size = imageSize(image);
	imageStore(image, ivec2(gl_GlobalInvocationID.xy), vec4(gl_GlobalInvocationID.x / size.x, gl_GlobalInvocationID.y / size.y, 0, 1));
}
