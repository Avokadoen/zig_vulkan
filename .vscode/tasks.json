{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "zig build -Doptimize=Debug -Dshader-debug-info=true -Dtracy=true",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "safe",
            "type": "shell",
            "command": "zig build -Doptimize=ReleaseSafe -Dshader-debug-info=true -Dtracy=true",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "release",
            "type": "shell",
            "command": "zig build -Doptimize=ReleaseSafe -Dshader-debug-info=false -Dtracy=false",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
